{
    "manifest_version": 2,
    "name": "Hello Extensions",
    "description": "Base Level Extension",
    "version": "1.0",
    "browser_action": {
        "default_popup": "index.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": ["storage", "activeTab"],
    "content_scripts": [
        {
            "js": ["content.js"],

            "matches": ["<all_urls>"]
        }
    ],
    "commands": {
        "show_suggestion": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y",
                "mac": "MacCtrl+Shift+Y"
            },
            "description": "Show suggestions"
        }
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "timon.ben.gaertner@gmail.com"
        }
    }
}
